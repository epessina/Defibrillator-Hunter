<?xml version='1.0' encoding='utf-8'?>
<widget id="polimi.epessina.defibrillatorhunter" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Mapad</name>
    <description>
        A cross-platform mobile application that allows users to map defibrillators on the field.
    </description>
    <author email="edoardo2.pessina@mail.polimi.it" href="https://github.com/epessina/Mapad">
        Edoardo Pessina
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="android-minSdkVersion" value="24" />
        <preference name="android-targetSdkVersion" value="26" />
        <icon src="www/img/icon/36x36.png" density="ldpi" />
        <icon src="www/img/icon/48x48.png" density="mdpi" />
        <icon src="www/img/icon/72x72.png" density="hdpi" />
        <icon src="www/img/icon/96x96.png" density="xhdpi" />
        <icon src="www/img/icon/144x144.png" density="xxhdpi" />
        <icon src="www/img/icon/192x192.png" density="xxxhdpi" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-device" spec="^2.0.2" />
    <plugin name="cordova-plugin-network-information" spec="^2.0.1" />
    <plugin name="cordova-plugin-globalization" spec="^1.11.0" />
    <plugin name="cordova-plugin-geolocation" spec="^4.0.1" />
    <preference name="Orientation" value="portrait" />
    <plugin name="cordova-plugin-x-toast" spec="^2.7.2" />
    <plugin name="cordova-plugin-file" spec="^6.0.1" />
    <preference name="cordova.plugins.diagnostic.modules" value="LOCATION" />
</widget>
